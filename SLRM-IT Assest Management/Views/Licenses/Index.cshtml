@model IEnumerable<SLRM_IT_Assest_Management.Models.License>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Licenses - SLRM IT-ASSET MANAGEMENT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .page-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #2c3e50;
            padding-bottom: 10px;
            border-bottom: 1px solid #dee2e6;
        }

        .action-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .search-box {
            display: flex;
            align-items: center;
        }

            .search-box input {
                margin-left: 5px;
                width: 200px;
            }

        .table-controls {
            display: flex;
            align-items: center;
        }

            .table-controls select {
                margin-left: 10px;
            }

        .table-container {
            margin-top: 20px;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .table-footer {
            display: flex;
            justify-content: flex-end;
            margin-top: 10px;
        }

        .pagination-info {
            font-size: 14px;
            color: #6c757d;
        }

        .action-buttons .btn {
            margin-right: 5px;
        }

        .badge {
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <h1 class="page-title">SLRM IT-ASSET MANAGEMENT &gt; Licenses</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="action-bar">
            <a asp-action="Create" class="btn btn-primary btn-add">
                <i class="fas fa-plus"></i> Add New License
            </a>

            <div class="table-controls">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search licenses..." />
                </div>
                <select>
                    <option>10 rows per page</option>
                    <option>25 rows per page</option>
                    <option>50 rows per page</option>
                </select>
            </div>
        </div>

        <div class="table-container">
            <div class="table-header">
                <h2 class="table-title">Licenses</h2>
                <div>
                    <span class="pagination-info">Showing @Model.Count() licenses</span>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Serial No</th>
                            <th>Machine/Service Details</th>
                            <th>Type</th>
                            <th>Division</th>
                            <th>User Dept</th>
                            <th>Qty</th>
                            <th>From Date</th>
                            <th>To Date</th>
                            <th>Work Order No</th>
                            <th>Renewal Before</th>
                            <th>Contact Person</th>
                            <th>Contact No</th>
                            <th>Office Contact No</th>
                            <th>EmailID</th>
                            <th>Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SerialNo</td>
                                <td>@item.MachineOrServiceDetails</td>
                                <td>@item.Type</td>
                                <td>@item.Division</td>
                                <td>@item.UserDepartment</td>
                                <td>@item.Quantity</td>
                                <td>@item.FromDate.ToShortDateString()</td>
                                <td>@item.ToDate.ToShortDateString()</td>
                                <td>@item.WorkOrderNo</td>
                                <td>@item.RenewalBefore.ToShortDateString()</td>
                                <td>@item.ContactPerson</td>
                                <td>@item.ContactNo</td>
                                <td>@item.OfficeContactNo</td>
                                <td>@item.EmailId</td>
                                <td>@item.Address</td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.LicenseId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.LicenseId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this license?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-footer">
                <div class="pagination-info">Total: @Model.Count() licenses</div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
