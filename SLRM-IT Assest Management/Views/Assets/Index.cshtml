@model IEnumerable<SLRM_IT_Assest_Management.Models.Asset>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Licenses - SLRM IT-ASSET MANAGEMENT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .page-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #2c3e50;
            padding-bottom: 10px;
            border-bottom: 1px solid #dee2e6;
        }

        .action-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .search-box {
            display: flex;
            align-items: center;
        }

            .search-box input {
                margin-left: 5px;
                width: 200px;
            }

        .table-controls {
            display: flex;
            align-items: center;
        }

            .table-controls select {
                margin-left: 10px;
            }

        .table-container {
            margin-top: 20px;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .table-footer {
            display: flex;
            justify-content: flex-end;
            margin-top: 10px;
        }

        .pagination-info {
            font-size: 14px;
            color: #6c757d;
        }

        .action-buttons .btn {
            margin-right: 5px;
        }

        .badge {
            font-size: 12px;
        }

        .monitor-col.d-none {
            display: none !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <h1 class="page-title">SLRM IT-ASSET MANAGEMENT &gt; Assets</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="action-bar">
            <a asp-action="Create" class="btn btn-primary btn-add">
                <i class="fas fa-plus"></i> Add New Asset
            </a>

            <div class="table-controls">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search assets..." />
                </div>
                <select>
                    <option>10 rows per page</option>
                    <option>25 rows per page</option>
                    <option>50 rows per page</option>
                </select>
            </div>
        </div>

        @{
            await Html.RenderPartialAsync("_BackButton");
        }

        <div class="btn-group mb-3" role="group" aria-label="Asset Type Toggle">
            <a asp-action="Laptops" class="btn btn-outline-primary">Laptops</a>
            <a asp-action="Desktops" class="btn btn-outline-primary">Desktops</a>
        </div>
        <div class="table-container">
            <div class="table-header">
                <h2 class="table-title">Assets</h2>
                <div>
                    <span class="pagination-info">Showing @Model.Count() assets</span>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Sl No</th>
                            <th>Type</th>
                            <th>Department</th>
                            <th>UserName</th>
                            <th>EmpCode</th>
                            <th>Host Name</th>
                            <th>Block</th>
                            <th>AssetLocation</th>
                            <th>AssetTag</th>
                            <th>Make</th>
                            <th>Model</th>
                            @* <th class="monitor-col @(ViewBag.AssetType == "Laptop" ? "d-none" : "")">Monitor Make</th>
                            <th class="monitor-col @(ViewBag.AssetType == "Laptop" ? "d-none" : "")">Monitor Model</th> *@
                            @if (ViewBag.AssetType == "Desktop")
                            {
                                <th>Monitor Make</th>
                                <th>Monitor Model</th>
                            }
                            <th>Serial No</th>
                            <th>Processor</th>
                            <th>RAM</th>
                            <th>HDD</th>
                            <th>Division</th>
                            <th>Antivirus</th>
                            <th>Status</th>
                            <th>OS Version</th>
                            <th>AutoCAD</th>
                            <th>Office</th>
                            <th>Windows License Key</th>
                            <th>IP Address</th>
                            <th>Nitro</th>
                            <th>Audit Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-type="@item.AssetType">
                                <td>@item.SlNo</td>
                                <td>@item.AssetType</td>
                                <td>@item.Department</td>
                                <td>@item.UserName</td>
                                <td>@item.EmpCode</td>
                                <td>@item.HostName</td>
                                <td>@item.Block</td>
                                <td>@item.AssetLocation</td>
                                <td>@item.AssetTag</td>
                                <td>@item.Make</td>
                                <td>@item.Model</td>
                                <td class="monitor-col @(ViewBag.AssetType == "Laptop" ? "d-none" : "")">@item.MoniterMake</td>
                                <td class="monitor-col @(ViewBag.AssetType == "Laptop" ? "d-none" : "")">@item.MoniterModel</td>
                                <td>@item.SerialNo</td>
                                <td>@item.Processor</td>
                                <td>@item.Ram</td>
                                <td>@item.Hdd</td>
                                <td>@item.Division</td>
                                <td>@item.AntiVirus</td>
                               @*  <td>
                                    @if (item.Status == "ACTIVE")
                                    {
                                        <span class="badge bg-success">ACTIVE</span>
                                    }
                                    else if (item.Status == "Ready to Deploy")
                                    {
                                        <span class="badge bg-primary">Ready</span>
                                    }
                                    else if (!string.IsNullOrEmpty(item.Status))
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">Not Set</span>
                                    }
                                </td> *@
                                <td>@item.OSVersion</td>
                                <td>@item.AutoCad</td>
                                <td>@item.Office</td>
                                <td>@item.WindowLicenseKey</td>
                                <td>@item.IPAddress</td>
                                <td>@item.Nitro</td>
                                <td>@item.AuditStatus</td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.AssetId" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.AssetId" class="btn btn-danger btn-sm">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

            <div class="table-footer">
                <div class="pagination-info">Total: @Model.Count() assets</div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<script>
    function goToDashboard() {
        // Replace with the correct dashboard route/path
        window.location.href = "/Home";
    }
</script>

