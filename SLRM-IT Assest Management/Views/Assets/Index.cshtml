@model IEnumerable<SLRM_IT_Assest_Management.Models.Asset>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Assets - SLRM IT-ASSET MANAGEMENT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Your existing styles remain the same */
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .page-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #2c3e50;
            padding-bottom: 10px;
            border-bottom: 1px solid #dee2e6;
        }
        /* ... other styles ... */
    </style>
</head>
<body>
    <div class="container-fluid">
        <h1 class="page-title">SLRM IT-ASSET MANAGEMENT &gt; Assets</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="action-bar">
            <a asp-action="Create" class="btn btn-primary btn-add">
                <i class="fas fa-plus"></i> Add New Asset
            </a>

            <div class="table-controls">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search assets..." />
                </div>
                <select>
                    <option>10 rows per page</option>
                    <option>25 rows per page</option>
                    <option>50 rows per page</option>
                </select>
            </div>
        </div>

        <div class="table-container">
            <div class="table-header">
                <h2 class="table-title">Assets</h2>
                <div>
                    <span class="pagination-info">Showing @Model.Count() assets</span>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Company</th>
                            <th>Asset Name</th>
                            <th>Asset Tag</th>
                            <th>Serial</th>
                            <th>Status</th>
                            <th>Employee Name</th>
                            <th>Category</th>
                            <th>Model Number</th>
                            <th>Warranty</th>
                            <th>Checked Out To</th>
                            <th>Expected Checkin</th>
                            <th>Next Audit</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Company</td>
                                <td>@item.AssetName</td>
                                <td>@item.AssetTag</td>
                                <td>@item.Serial</td>
                                <td>
                                    @if (item.Status == "ACTIVE")
                                    {
                                        <span class="badge bg-success">ACTIVE</span>
                                    }
                                    else if (item.Status == "Ready to Deploy")
                                    {
                                        <span class="badge bg-primary">Ready</span>
                                    }
                                    else if (!string.IsNullOrEmpty(item.Status))
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">Not Set</span>
                                    }
                                </td>
                                <td>@item.EmployeeName</td>
                                <td>@item.Category</td>
                                <td>@item.ModelNo</td>
                                <td>@(item.Warranty?.ToString() + " months")</td>
                                <td>@item.CheckedOutTo</td>
                                <td>@item.ExpectedCheckinDate?.ToString("yyyy-MM-dd")</td>
                                <td>@item.NextAuditDate?.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.AssetId" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.AssetId" class="btn btn-danger btn-sm">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-footer">
                <div class="pagination-info">Total: @Model.Count() assets</div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>